{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}

	<h1>Nos produits phares:
	</h1>
	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">
					<img src="{{ p.mainPicture }}" class="img-fluid" alt="">
					<div class="card-body">
						<span class="badge bg-secondary">{{ p.category.name }}</span>
						<h4 class="card-title">{{ p.name }}</h4>
						<h3>{{ p.price / 100 }}
							&euro;</h3>
						<p class="card-text">{{ p.shortDescription }}</p>
						<a href="#" class="btn-primary btn-sm">test</a>
						<a href="#" class="btn-success btn-sm">bouton</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irreprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit.
	</p>

	<div class="row">
		{% include "shared/_assurance.html.twig" with {
			'color': 'info',
			'icon': 'fa-truck',
			'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Sed, beatae"
		} %}

		{% include "shared/_assurance.html.twig" with {
			'color': 'success',
			'icon': 'fa-check',
			'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Sed, beatae"
		} %}

		{% include "shared/_assurance.html.twig" with {
			'color': 'warning',
			'icon': 'fa-lock',
			'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Sed, beatae"
		} %}


	</div>

{% endblock %}
