{% extends "base.html.twig" %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block body %}
	<h1>{{ product.name }}</h1>

	<div class="row">
		<div class="col-3">
			<img class="img-fluid" src="{{ product.mainPicture }}" alt="">
		</div>
		<div class="col">
			<h3>{{ product.price }}
				&euro;</h3>
			<p>{{ product.shortDescription }}</p>
			<button type="button" class="btn btn-success">
				<i class="fas fa-shopping-cart"></i>
				Ajouter au panier</button>

		</div>
	</div>
{% endblock %}
